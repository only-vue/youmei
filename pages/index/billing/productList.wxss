/* pages/billing/productList/index.wxss */
.bg-box {
  width: 100%;
  height: 400rpx;
}

.bg-img {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 100%;
  height: 400rpx;
  z-index: -999;
}
.title{
 color: white;
 font-size: 80rpx;
 font-weight: 600;
 margin-left: 40rpx;
 margin-top: 20rpx;
}

.store{
  margin-left: 40rpx;
  margin-top: 120rpx;
  display: flex;
}
.avater{
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  background-color: white;
  padding-top: 5rpx;
}
.avater-circle{
  width: 110rpx;
  height: 110rpx;
  margin: 5rpx;
  border-radius: 360rpx;
  background-color: rgba(85, 178, 206,0.5);
  text-align: center;

}
.avater-text{
  margin: 5rpx;
  line-height: 110rpx;
  font-size: 60rpx;
  color:rgb(218, 83, 250);
}
.store-title{
  color: white;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
  display: block;
}
.store-location{
  color: white;
  margin-left: 30rpx;
 
}
.recommended-view{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.recommended-point{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.drivder{
  height: 4rpx;
  background-color: rgba(233, 233, 233,1);
}
.item{
  padding-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.item-title{
  display: block;
}
.item-content{
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.item_line{
  height: 4rpx;
  background-color: rgba(233, 233, 233,1);
  margin-left: 50rpx;
  margin-top: 30rpx;
}
.item-title{
  font-weight: bold;
}
.big-gift{
  color: rgb(207, 79, 142);
}
.btn_get{
  background-color: rgb(207, 79, 142);
  color: white;
  border-radius: 36rpx;
  text-align: center;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

/*模态框*/
.modals-cancel {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
 
.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 0;
  right: 0;
  height: 680rpx;
  background-color: #fff;
}
 
/*动画前初始位置*/
 
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}
.modal-title{
  text-align: center;
  padding: 15rpx;
  background-color: #e5e5e5;
}
.modal-close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 15rpx;
  bottom: 15rpx;
  right: 15rpx;
}
.modal-content{
  margin: 30rpx;
}
.gift-title{
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}
.gift-title2{
  font-size: 34rpx;
  color: #db5397;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.gift-title2-order{
  font-size: 30rpx;
  background-color: #db5397;
  color: white;
  height: 36rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.gift-item-info{
  font-size: 30rpx;
  color: #999999;
  margin-left: 50rpx;
}

.table-content{
  border: 1px solid #db5397; 
  border-radius: 2px;  
  background-color: white;
}
.table-title{
  display: flex;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.table-title-item{
  flex-flow: 1;
  width: 100%;
  text-align: center;
  
}
.title-color{
  color: #db5397;
}
.margin-top20{
  margin-top: 20rpx;
}
.table-color{
  background-color: #EBF9F9;
}
 

